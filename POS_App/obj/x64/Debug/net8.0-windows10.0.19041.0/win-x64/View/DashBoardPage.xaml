<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POS_App.DashBoardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#f0daae">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="DashBoard" Foreground="#794730" FontWeight="Bold" VerticalAlignment="Center" FontSize="32" Grid.Column="0" Margin="30,0,0,0"/>
            <TextBlock x:ConnectionId='2' x:Name="UserNameTextBlock" Foreground="#794730" FontWeight="Bold" VerticalAlignment="Center" FontSize="24" Grid.Column="2" Margin="0, 0, 30, 0"/>
        </Grid>


        <Border Grid.Row="1"  Background="#ffffdf" BorderThickness="1" BorderBrush=" #986650 " CornerRadius="12" Margin="10">
            <!-- StackPanel để xếp ảnh và text theo chiều dọc -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="../Assets/latte-art.png" Width="512" Height="512"/>
                <TextBlock Text="Wellcome To DashBoard" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="#794730"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>

