<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POS_App.View.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_App.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="../Assets/background.jpg"/>
    </Page.Background>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="20">
        <Grid Background="#FAF7F5" Height="200" Width="400">
            <FontIcon Glyph="&#xE8FA;" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
            <TextBlock Text="Please enter user information."
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="10"
                FontSize="16" 
                       Foreground="Black"/>
        </Grid>
        <StackPanel Background="#EBE8E6" Padding="20"  VerticalAlignment="Center" Width="400">
            <TextBlock Text="Registration" FontSize="30" FontWeight="Bold" Foreground="Black"  HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBox x:ConnectionId='3' Grid.Column="0" 
                         Margin="0,0,10,10" 
                         Foreground="Black" 
                         BorderBrush="Gray" 
                         BorderThickness="1" 
                         Padding="10"
                         Name="firstnameTextBox"
                         Text="{Binding RegisterParams.first_name, Mode=TwoWay}">

                    <TextBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock 
                                Text="First Name" 
                                FontSize="16" 
                                FontWeight="Bold" 
                                Foreground="Black"
                                
                                />
                        </DataTemplate>

                    </TextBox.HeaderTemplate>
                </TextBox>
                <TextBox x:ConnectionId='4' Grid.Column="1" 
                         Margin="10,0,0,10" 
                         Foreground="Black"  
                         BorderBrush="Gray" 
                         BorderThickness="1" 
                         Padding="10"
                         Name="lastnameTextBox"
                         Text="{Binding RegisterParams.last_name, Mode=TwoWay}">

                    <TextBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock 
                                Text="Last Name" 
                                FontSize="16" 
                                FontWeight="Bold" 
                                Foreground="Black"
                                
                                />
                        </DataTemplate>

                    </TextBox.HeaderTemplate>

                </TextBox>

                <TextBox x:ConnectionId='5' Grid.Row="1" 
                         Grid.ColumnSpan="2" 
                         Margin="0,0,0,10" 
                         Foreground="Black"  
                         BorderBrush="Gray" 
                         BorderThickness="1" 
                         Padding="10"
                         Name="emailTextBox"
                         Text="{Binding RegisterParams.email, Mode=TwoWay}">

                    <TextBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock 
                                Text="Email" 
                                FontSize="16" 
                                FontWeight="Bold" 
                                Foreground="Black"
                            />
                        </DataTemplate>

                    </TextBox.HeaderTemplate>

                </TextBox>
                <PasswordBox x:ConnectionId='6' Grid.Row="2" 
                             Grid.ColumnSpan="2" 
                             Margin="0,0,0,20" Foreground="Black"  
                             BorderBrush="Gray" 
                             BorderThickness="1" 
                             Padding="10"
                             Name="passwordBox"
                             Password="{Binding RegisterParams.password, Mode=TwoWay}">

                    <PasswordBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock 
                                Text="Password" 
                                FontSize="16" 
                                FontWeight="Bold" 
                                Foreground="Black"
                               />
                        </DataTemplate>
                    </PasswordBox.HeaderTemplate>

                </PasswordBox>

            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <TextBlock
                     Text="{Binding RegisterParams.Noti, Mode=OneWay}"
                     Foreground="#D6557E"
                     FontSize="16"/>    
            </StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                <Button x:ConnectionId='2' x:Name="registerButton" Content="Register" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        CornerRadius="20"
                        Foreground="Black"
                        Background="#D6557E" 
                        Width="120" 
                        Height="40" 
                        Margin="30 0"
                        Command="{Binding RegisterCommand}"  
                        CommandParameter="{Binding RegisterParams}"/>
            </StackPanel>

           
        </StackPanel>
    </StackPanel>
</Page>

