<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POS_App.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:POS_App.ViewModel"
    mc:Ignorable="d" 
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid Background="#505589" Height="200" Width="400">
            <FontIcon Glyph="&#xE77B;" FontSize="64" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBlock Text="Please enter user information."
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       Margin="10"
                       FontSize="16" />
        </Grid>
        <StackPanel Background="#D5DADF" Width="400">
            <StackPanel>
                <TextBox x:ConnectionId='6'
                    Width="300"
                    PlaceholderText="Enter your username"
                    Margin="0,5,0,0"
                    Background="White"
                    Foreground="Black"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    Name="usernameTextBox"
                    Text="{Binding LoginParams.Username, Mode=TwoWay}">
                   
                    <TextBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock 
                                Text="Username" 
                                FontSize="16" 
                                FontWeight="Bold" 
                                Foreground="Black"
                                Width="300"
                                Margin="0 20 0 10"/>
                        </DataTemplate>
                    </TextBox.HeaderTemplate>
                </TextBox>
            </StackPanel>

            <StackPanel>
                <PasswordBox x:ConnectionId='4'
                    Width="300"
                    PlaceholderText="Enter your password"
                    Margin="0,5,0,0"
                    Background="White"
                    Foreground="Black"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    Name="passwordBox"
                    Password="{Binding LoginParams.Password, Mode=TwoWay}">
                    
                    <PasswordBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock 
                                Text="Password" 
                                FontSize="16" 
                                FontWeight="Bold" 
                                Foreground="Black"
                                Width="300"
                                Margin="0 20 0 10"/>
                        </DataTemplate>
                    </PasswordBox.HeaderTemplate>
                </PasswordBox>
            </StackPanel>
           

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <TextBlock
                    
                    Text="{Binding LoginParams.Noti, Mode=OneWay}"
                    Foreground="Red"
                    FontSize="16"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="30">
                <Button x:ConnectionId='2' x:Name="loginButton" Content="Login" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        CornerRadius="20"
                        Foreground="Black"
                        Background="#D6557E" 
                        Width="120" 
                        Height="40" 
                        Margin="30 0"
                        Command="{Binding LoginCommand}"  
                        CommandParameter="{Binding LoginParams}"/>
                   
                    <Button x:ConnectionId='3' x:Name="signUpButton" Content="Sign up"  
                        FontSize="16" 
                        FontWeight="Bold" 
                        CornerRadius="20" 
                        Foreground="Black"
                        Background="Red" 
                        Width="120" 
                        Height="40" 
                        Margin="30 0"
                                                   />
            </StackPanel>
        </StackPanel>
    </StackPanel>

</Page>

