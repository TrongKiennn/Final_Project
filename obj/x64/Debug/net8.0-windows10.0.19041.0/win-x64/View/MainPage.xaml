<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    xmlns:documents="clr-namespace:ABI.Microsoft.UI.Xaml.Documents;assembly=Microsoft.WinUI"
    x:Class="DemoListBinding1610.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DemoListBinding1610"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <DataTemplate x:Key="HorizontalEmployee"                            >
            <StackPanel x:ConnectionId='8' Orientation="Horizontal">
                <Image x:ConnectionId='9'                          Width="20" Height="20" Margin="0, 0, 7, 0"/>
                <TextBlock >
            <Run Text="ID:"/> <Run x:ConnectionId='10'                    Foreground="Red"/>, Name=<Run x:ConnectionId='11'                      Foreground="Blue" FontWeight="Bold"/>
                </TextBlock>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="VerticalEmployee"                            >
            <StackPanel x:ConnectionId='3' Orientation="Vertical">
                <Image x:ConnectionId='4'                          Width="50" Height="50" Margin="0, 0, 7, 0"/>
                <TextBlock >
            <Run Text="ID:"/> <Run x:ConnectionId='5'                    Foreground="Red" TextDecorations="Underline"/>, Name=<Run x:ConnectionId='6'                      Foreground="Blue" FontWeight="Bold"/>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel x:ConnectionId='12' Orientation="Horizontal" Name="optionsStackPanel">
            <Button x:ConnectionId='22' Name="getAllCategoriesButton" 
                Margin="5"
                Content="Get all categories"
                Width="150" Height="35"                                     />
            <Button x:ConnectionId='23' Name="addCategoryButton" Content="Add Category"
                Width="150" Height="35" Margin="5"
                                               />
            <Button x:ConnectionId='24' Name="deleteCategoryButton" Content="Delete Category"
            Width="150" Height="35" Margin="5"
                                              />
            <Button x:ConnectionId='25' Name="updateCategoryButton" Content="Update Category"
            Width="150" Height="35" Margin="5"
                                              />
            <Button x:ConnectionId='26' Name="replaceCategoryButton" Content="Replace list"
            Width="150" Height="35" Margin="5"
                                               />
            <Button x:ConnectionId='27' Name="goToOrderPage" Content="Go to Orderpage"
            Width="150" Height="35" Margin="5"
                                       />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:ConnectionId='15' Margin="5" Content="Previous" Width="80" Height="35" Name="previousButton"                             />
            <ComboBox x:ConnectionId='16'                                                        
                                                                                         
                                                                       
                      Margin="5" Name="pagesComboBox" Width="100" Height="35">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock >
                            <Run Text="{Binding Page}"/>/<Run Text="{Binding Total}"/>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button x:ConnectionId='17' Margin="5" Content="Next" Width="80" Height="35" Name="nextButton"                         />
            <TextBox x:ConnectionId='18' Name="keyword"                                  
                                                                   Width="150"/>
            <Button x:ConnectionId='19' Name="searchButton" Width="80" Height="35" Content="Search"                           />
            <ToggleSwitch x:ConnectionId='20' Width="100"                                                                                      OnContent="Sort by ID" OffContent="No sort"/>
        </StackPanel>
        <ListView x:ConnectionId='13' Name="itemsComboBox" 
                                                                         
                  ItemTemplate="{StaticResource HorizontalEmployee}"
                  Width="400" Height="400">
        </ListView>
        <StackPanel>
            <TextBlock x:ConnectionId='14' Name="infoTextBlock"                                            />
        </StackPanel>
    </StackPanel>
</Page>

